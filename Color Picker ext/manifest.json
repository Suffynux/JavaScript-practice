{
    "manifest_version": 3,
    "name": "Color Picker",
    "version": "1.0",
    "description": "A simple color picker extension to select colors from web pages.",
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "./index.html",
      "default_icon": "./images/picker_48.png"
    },
    "icons": {
      "16": "./images/picker_16.png",
      "32": "./images/picker_32.png",
      "48": "./images/picker_48.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["tailwind.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  